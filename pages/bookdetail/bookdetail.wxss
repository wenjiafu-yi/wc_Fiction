/* pages/book-detail/book-detail.wxss */

.book-detail {
  width: 100%;
  height: auto;
}

.book-detail .detail-item {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  margin: 10rpx auto;
}

.detail-icon, .item-content {
  height: 100%;
}

.book-detail .detail-icon {
  width: 25%;
  border-radius: 5rpx;
}

.book-detail .item-content {
  display: flex;
  width: 70%;
  flex-flow: wrap;
}

.book-detail .item-content view {
  width: 100%;
  height: 20%;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  color: rgb(146, 142, 142);
}

.book-detail .book-stars {
  width: 40% !important;
}

.book-detail .item-content .book-name {
  font-size: 36rpx;
  color: #000;
  font-weight: 600;
}

.book-detail .book-author {
  color: red;
}

.book-detail .book-info {
  height: 100rpx;
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
}

.book-detail .book-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: wrap;
}

.book-num, .book-Retain {
  width: 100%;
  text-align: center;
}

.book-detail .book-num {
  font-weight: 600;
  font-size: 30rpx;
  color: rgb(143, 138, 138);
}

.book-detail .book-nums {
  display: flex;
  justify-content: space-between;
  font-weight: 600;
  font-size: 30rpx;
  color: rgb(143, 138, 138);
}

.book-detail .book-star {
  height: 34rpx;
  width: 34rpx;
}

.book-detail .book-Retain {
  font-size: 24rpx;
  color: rgb(199, 194, 194);
}

.book-detail .book-short {
  padding: 30rpx;
  box-sizing: border-box;
}

.book-detail .book-hot {
  font-weight: 600;
  font-size: 38rpx;
}

.book-detail .book-introduction {
  font-size: 30rpx;
  line-height: 1.5;
}

.book-detail .close-introduction {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

.book-detail .hot-comment {
  padding: 30rpx;
  box-sizing: border-box;
}

.book-detail .commet-title {
  font-size: 38rpx;
  font-weight: 600;
}

.book-detail .comment-item {
  display: flex;
  flex-flow: wrap;
}

.book-detail .comment-item view {
  width: 100%;
  margin-bottom: 10rpx;
}

.book-detail .item-title {
  margin-top: 20rpx;
  font-size: 32rpx;
}

.book-detail .item-contents {
  font-size: 30rpx;
  line-height: 1.5;
}

.book-detail .open-contents {
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  display: -webkit-box;
}

.book-detail .comment-info {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.comment-author, comment-help {
  width: 50%;
  height: 100%;
}

.book-detail .comment-author {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.book-detail .comment-item .comment-img {
  height: 80%;
  width: 25%;
  margin-bottom: 20rpx;
}

.book-detail .comment-item .comment-imgs {
  height: 100%;
  width: 90%;
  border-radius: 50%;
}

.book-detail .comment-item .author-name {
  width: 70%;
  height: 100%;
  font-size: 30rpx;
}

.book-detail .comment-item .author-name {
  display: flex;
  flex-flow: wrap;
  align-items: center;
  justify-content: center;
}

.comment-name, .comment-time {
  width: 100%;
  font-size: 30rpx;
}

.book-detail .comment-name {
  color: rgb(80, 77, 77);
}

.book-detail .comment-time {
  color: rgb(192, 186, 186);
}

.book-detail .comment-help {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: wrap;
  font-size: 30rpx;
  color: rgb(192, 186, 186);
}

.book-detail .commet-score {
  display: flex;
  padding: 0 0 0 25%;
  box-sizing: border-box;
  justify-content: flex-end;
}

.book-detail .comment-star {
  height: 80%;
  width: 14%;
  background: white;
}

.commet-score, .comment-useful {
  width: 100%;
  height: 50%;
}

.book-detail .comment-useful {
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
}

.book-detail .guess-love {
  margin-top: 40rpx;
}

.book-detail .guess-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.book-detail .left-title {
  font-size: 40rpx;
  font-weight: 600;
}

.book-detail .right-title {
  font-size: 24rpx;
  color: rgb(211, 207, 207);
}

.book-detail .guess-content {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-start;
  flex-flow: wrap;
}

.book-detail .guess-item {
  display: flex;
  width: 33.3%;
  height: 400rpx;
  align-items: center;
  flex-flow: column wrap;
}

.guess-name, .guess-img, .guess-author {
  width: 100%;
  box-sizing: border-box;
}

.book-detail  .guess-img {
  height: 260rpx;
  width: 77%;
  border-radius: 5rpx;
}

.book-detail .guess-name {
  font-size: 32rpx;
  font-weight: 600;
  padding: 0 10%;
  box-sizing: border-box;
}

.book-detail .guess-author {
  color: rgb(204, 200, 200);
  font-size: 30rpx;
  padding: 0 10%;
  box-sizing: border-box;
}

.book-detail .book-place {
  height: 70rpx;
  width: 100%;
}

.book-detail .read-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
  border-top: 2rpx solid rgb(221, 219, 219);
}

.book-detail .begin-read, .add-shelf {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  box-sizing: border-box;
}
