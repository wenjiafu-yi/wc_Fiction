/* pages/classify/classify.wxss */

.classify-list, .classify-content {
}

.classify .classify-item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}

.classify .item-back {
  background: rgba(230, 229, 229, 0.3);
}

.classify .item-title {
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.classify .item-check {
  border-left: 4rpx solid red;
  box-sizing: border-box;
}

.classify  .classify-list {
  position: fixed;
  top: 0;
  border-right: 2rpx solid rgb(223, 220, 220);
  box-sizing: border-box;
  height: 100%;
  font-size: 30rpx;
  left: 0;
  width: 20%;
  overflow-y: auto;
}

.classify  .classify-content {
  /* right: 0; */
  float: right;
  width: 80%;
}

.classify .classify-title {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: rgba(168, 166, 166, 0.9);
}

.classify .book-content {
  display: flex;
  justify-content: space-between;
  flex-flow: wrap;
  padding: 20rpx;
  box-sizing: border-box;
}

.classify .book-item {
  height: 100rpx;
  width: 48%;
  margin-bottom: 20rpx;
  display: flex;
  background: rgba(230, 229, 229, 0.3);
  justify-content: space-between;
}

.classify .book-title {
  height: 100%;
  width: 50%;
  display: flex;
  align-items: center;
  flex-flow: wrap;
  justify-content: center;
}

.classify .book-type {
  height: 25rpx;
  width: 100%;
  text-align: center;
  font-size: 26rpx;
}

.classify .book-num {
  font-size: 20rpx;
}

.classify .book-img {
  position: relative;
  height: 100%;
  width: 50%;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}

.classify .book-imgs {
  height: 80%;
  width: 40%;
}

.classify .book-img .main-img {
  position: absolute;
  height: 60rpx;
  width: 60rpx;
  top: 20rpx;
  left: 28%;
}

.classify .classify-place {
  height: 80rpx;
}
