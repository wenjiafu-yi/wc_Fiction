/* pages/search/search.wxss */

.search {
  height: auto;
  width: 100%;
  padding-top: 70rpx;
  box-sizing: border-box;
}

.search-box {
  width: 100%;
  height: 70rpx;
  position: fixed;
  top: 10rpx;
  left: 0;
  background: #fff;
}

.search-input {
  height: 70rpx;
  width: 700rpx;
  margin: 0 auto;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  border: 2rpx solid rgba(71, 69, 69, 0.3);
  color: black;
}

.search-content {
  display: flex;
  flex-flow: wrap;
  padding: 0 30rpx;
  height: auto;
  box-sizing: border-box;
  justify-content: flex-start;
  align-items: center;
}

.search-hot {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  height: 60rpx;
  font-size: 30rpx;
  margin: 15rpx;
  color: rgb(180, 177, 177);
  background: rgba(219, 215, 215, 0.3);
}

.search-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: rgb(192, 187, 187);
  padding: 40rpx 40rpx 20rpx 40rpx;
  box-sizing: border-box;
}

.search-delete {
  height: 40rpx;
  width: 40rpx;
}

.search-item {
  margin: 20rpx auto;
}

.history-item, .search-item {
  height: 40rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: rgba(27, 23, 23, 0.603);
}

.history-item {
  margin-bottom: 20rpx;
  width: 88%;
}
