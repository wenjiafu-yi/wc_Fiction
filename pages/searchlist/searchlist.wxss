/* pages/searchlist/searchlist.wxss */

.search-list {
  width: 100%;
  height: auto;
}

.search-item {
  width: 100%;
  height: 300rpx;
  padding: 25rpx;
  box-sizing: border-box;
  margin: 10rpx auto;
}

.search-icon, .item-content {
  height: 250rpx;
}

.search-icon {
  float: left;
  width: 250rpx;
}

.item-content {
  float: right;
  width: 440rpx;
}

.short-title {
  margin: 0 auto;
  font-size: 36rpx;
}

.short-intro {
  font-size: 28rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
}
